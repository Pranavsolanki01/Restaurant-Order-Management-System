# ==================== SERVER CONFIGURATION ====================
# Port on which the auth service will run
SERVER_PORT=8081

# ==================== DATABASE CONFIGURATION ====================
# MySQL database connection settings
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_DATABASE=auth_db
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ==================== REDIS CONFIGURATION ====================
# Redis cache server settings
REDIS_HOST=localhost
REDIS_PORT=6379

# ==================== JWT CONFIGURATION ====================
# JWT token settings - IMPORTANT: Use a strong secret in production!
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRATION=86400000
JWT_ISSUER=restaurant-auth-service

# ==================== RATE LIMITING CONFIGURATION ====================
# API rate limiting settings (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3

# ==================== LOGGING CONFIGURATION ====================
# Application logging levels
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
JPA_SHOW_SQL=false

# ==================== SPRING PROFILES ====================
# Active Spring profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# ==================== ACTUATOR CONFIGURATION ====================
# Health and monitoring endpoints
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorizedguration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=auth_db
